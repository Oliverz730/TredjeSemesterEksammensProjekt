@page
@model TSEP.App.Pages.Konsulent.IndexModel
@{
}
<script src="lib/jquery/dist/jquery.js"></script>

<section class="container">
    
    <section class="row my-3">
    <h1>@Model.User.Identity.Name</h1>
    </section>

    <table class="table table-striped">
        @foreach (var opgave in Model.IndexViewModels)
        {
            <tr>
                <td>
                    <h3>
                        @opgave.AnsatId
                    </h3>
                </td>

                <td>
                    <h4>
                        Projekt Id

                        <span>@opgave.ProjektId</span>
                    </h4>
                </td>

                 <td>
                    <h4>
                    Opgave type

                    <span>@opgave.OpgaveTypeBeskrivelse</span>
                    </h4>
                 </td>
                 <td>
                    <h4>
                    Status

                        <span>@opgave.Status</span>
                    </h4>
                </td>

                <td>
                    <h4>
                        Varighed
                        <span>@opgave.StartTid</span>

                        <span>@opgave.SlutTid</span>
                    </h4>
                </td>

            </tr>

        }
    </table>
</section>