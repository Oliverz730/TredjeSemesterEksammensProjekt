                <span asp-validation-for="KompetanceEditModel.Description" class="text-danger"></span>
                <input asp-for="KompetanceEditModel.Description" class="form-control" value="@Model.KompetanceEditModel.Description" autocomplete="new-description" aria-required="true"/>
                <label asp-for="KompetanceEditModel.Description"></label>
                <button type="submit" class="w-100 btn btn-lg btn-primary">Edit</button>
