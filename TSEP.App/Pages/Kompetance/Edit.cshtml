@{
}

<section>

    <h1>Edit Kompetance</h1>

    <section class="w-50">

        <form class="form-floating" method="post">
            
            @*Damn div du be nessecary*@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <section class="form-group">
                <input type="hidden" asp-for="KompetanceEditModel.RowVersion"/>
